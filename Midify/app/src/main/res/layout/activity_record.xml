<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/ColorPrimary"
    tools:context="sg.edu.nus.midify.record.RecordActivity">

    <ImageView
        android:id="@+id/loading_disc"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:layout_above="@+id/record_button"
        android:layout_marginBottom="100dp"
        android:src="@drawable/loadingdisc" />

    <!-- Dummy View For Reference -->
    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/anchor"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        fab:fab_colorNormal="@color/White"
        fab:fab_colorPressed="@color/White"
        fab:fab_colorRipple="@color/White"
        android:onClick="onRecordButtonClick"
        />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/pick_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/anchor"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        fab:fab_colorNormal="@color/White"
        fab:fab_colorPressed="@color/White"
        fab:fab_colorRipple="@color/White"
        android:onClick="onPickButtonClick"
        />

</RelativeLayout>
